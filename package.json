{
  "name": "LSNM",
  "version": "1.0.0",
  "description": "Lunch Specials Near Me",
  "main": "index.js",
  "scripts": {
    "ship-it": "yarn run uglify && yarn run imagemin && yarn run sass && yarn run purify",
    "uglify:build": "uglifyjs source/scripts/*.js -m -o public/scripts/script.min.js",
    "uglify-win:build": "bash -c 'uglifyjs source/scripts/*.js -m -o public/scripts/script.min.js'",
    "uglify:watch": "watch 'yarn run uglify:build' source/scripts/",
    "imagemin:build": "imagemin source/images/* -o public/images/",
    "imagemin:watch": "watch 'yarn run imagemin:build' source/images/",
    "sass:build": "node-sass source/sass/main.scss -r public/styles/main.css",
    "sass:watch": "watch 'yarn run sass:build' source/sass/",
    "purify": "purifycss public/styles/main.css public/scripts/script.min.js --min --info --out public/styles/main.css",
    "server": "node .",
    "eslint:watch": "watch 'yarn run eslint:build' source/scripts/script.js",
    "eslint:build": "yarn run eslint source/scripts/script.js",
    "babel:build": "yarn run babel public/scripts/script.min.js --out-file public/scripts/script.min.js",
    "babel:watch": "watch 'yarn run babel:build' source/scripts/*.js",
    "watch": "parallelshell 'yarn run server' 'yarn run sass:watch' 'yarn run uglify:watch' 'yarn run imagemin:watch' 'yarn run babel:build'",
    "idonthavemac": "yarn run sass:build && yarn run uglify-win:build && yarn run imagemin:build && node index.js"
  },
  "author": "Alphaity.io",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.18.0",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "express-handlebars": "^3.0.0",
    "global": "^4.3.1",
    "imagemin": "^5.2.2",
    "knex": "^0.12.1",
    "lodash": "^4.16.1",
    "node-sass": "^3.8.0",
    "nodemailer": "^2.5.0",
    "parallelshell": "^2.0.0",
    "pg": "^6.1.0",
    "recaptcha-verify": "^0.1.0",
    "uglifyjs": "latest",
    "watch": "^0.19.2",
    "winston": "^2.3.0"
  }
}
